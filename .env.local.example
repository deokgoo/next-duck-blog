# =============================================================================
# Firebase Admin SDK Configuration (서버 전용, REQUIRED)
# =============================================================================
# Firebase Console -> Project Settings -> Service Accounts -> Generate New Private Key
# 생성된 JSON 파일에서 아래 값들을 복사하세요.

FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email@your-project-id.iam.gserviceaccount.com

# NOTE: 개행이 포함된 경우 반드시 따옴표로 감싸세요.
# -----BEGIN PRIVATE KEY----- 와 -----END PRIVATE KEY----- 포함하여 전체 복사
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Firebase Storage Bucket (REQUIRED)
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firestore Named Database ID (기본값: (default))
# 기본 데이터베이스 사용 시 '(default)', 이름이 있는 경우 해당 이름 입력
FIREBASE_DATABASE_ID=(default)

# =============================================================================
# Admin Authentication (REQUIRED)
# =============================================================================
# 어드민 대시보드(/admin)에 접근 가능한 Google 계정 이메일 목록 (쉼표로 구분)
# 예: "admin@gmail.com,editor@gmail.com"
NEXT_PUBLIC_ADMIN_EMAILS="your.email@example.com"

# =============================================================================
# Firebase Client Configuration (REQUIRED)
# =============================================================================
# Firebase Console -> Project Settings -> Your apps -> Web app
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# =============================================================================
# Site Configuration (REQUIRED)
# =============================================================================
# 배포된 사이트의 URL (trailing slash 없이)
NEXT_PUBLIC_SITE_URL=https://your-blog.vercel.app

# GitHub 저장소 URL (선택사항)
# NEXT_PUBLIC_SITE_REPO=https://github.com/your-username/your-repo-name

# =============================================================================
# Analytics (선택사항, Optional)
# =============================================================================
# Google Analytics 4 Measurement ID (예: G-XXXXXXXXXX)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Naver 웹마스터 도구 인증 코드
# https://searchadvisor.naver.com 에서 발급
# NEXT_PUBLIC_NAVER_WEBMASTER_ID=your-naver-webmaster-id

# Umami Analytics Website ID
# NEXT_UMAMI_ID=your-umami-website-id

# =============================================================================
# Monetization (선택사항, Optional)
# =============================================================================
# Google AdSense Publisher ID (예: ca-pub-XXXXXXXXXX)
# NEXT_PUBLIC_GOOGLE_ADSENSE_ID=ca-pub-XXXXXXXXXX

# =============================================================================
# Google Search Console (선택사항, Optional)
# =============================================================================
# HTML 파일 인증 방식: 파일명에서 'google'과 '.html' 사이의 값
# 예: google1d03319f0ede5dc1.html → 1d03319f0ede5dc1
# GOOGLE_SITE_VERIFICATION_ID=your-verification-id

# =============================================================================
# Comments - Giscus (선택사항, Optional)
# =============================================================================
# https://giscus.app 에서 설정 후 아래 값들을 채워주세요.
# NEXT_PUBLIC_GISCUS_REPO=your-username/your-repo
# NEXT_PUBLIC_GISCUS_REPOSITORY_ID=your-repository-id
# NEXT_PUBLIC_GISCUS_CATEGORY=General
# NEXT_PUBLIC_GISCUS_CATEGORY_ID=your-category-id
